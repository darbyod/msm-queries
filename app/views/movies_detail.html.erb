<h1>Movie #<%= @movie_id%> details</h1>

<a href = "/movies">Go back</a>


<hr>
   
   <% 
   movies = Movie.all
   movie = movies.where({ :id => @movie_id }).first 
   %>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
     <%= movie.description %>
  </dd>

  <dt>
    Image
  </dt>
    <img src=<%= movie.image %> style="width:250px;">
 
  <dd>
  
  </dd>

  <dt>
    Director
  </dt>
   
  
  <dd>
   <%= Director.all.where({:id => movie.director_id}).first.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
      <%= movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
         <%= movie.updated_at %>
  </dd>
</dl>

<hr>
